# Database (Production - Use Managed Service)
DATABASE_URL=postgresql://username:password@your-db-host.region.rds.amazonaws.com:5432/meluriai_prod
REDIS_URL=redis://your-redis-host.cache.amazonaws.com:6379/0

# JWT (Use different secret for production!)
JWT_SECRET_KEY=generate-new-secure-key-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

# API Keys
TELEGRAM_BOT_TOKEN=your-production-telegram-bot-token
PYTH_API_KEY=your-pyth-api-key
CHAINLINK_API_KEY=your-chainlink-api-key

# RPC URLs (MAINNET) - Use QuickNode or Alchemy for production
BNB_RPC_URL=https://your-endpoint.bsc-mainnet.quiknode.pro/your-key
ETHEREUM_RPC_URL=https://your-endpoint.eth-mainnet.quiknode.pro/your-key
BASE_RPC_URL=https://your-endpoint.base-mainnet.quiknode.pro/your-key
SOLANA_RPC_URL=https://your-endpoint.solana-mainnet.quiknode.pro/your-key
POLYGON_RPC_URL=https://your-endpoint.matic-mainnet.quiknode.pro/your-key
ARBITRUM_RPC_URL=https://your-endpoint.arbitrum-mainnet.quiknode.pro/your-key
OPTIMISM_RPC_URL=https://your-endpoint.optimism-mainnet.quiknode.pro/your-key
LINEA_RPC_URL=https://rpc.linea.build
SUI_RPC_URL=https://fullnode.mainnet.sui.io

# The Graph
GRAPH_API_KEY=your-production-graph-api-key

# Etherscan API Keys (for contract verification and blockchain data)
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
ARBISCAN_API_KEY=your-arbiscan-api-key
OPTIMISTIC_ETHERSCAN_API_KEY=your-optimistic-etherscan-api-key
BASESCAN_API_KEY=your-basescan-api-key
LINEASCAN_API_KEY=your-lineascan-api-key

# ML Models
ML_MODEL_PATH=./models
HUGGINGFACE_TOKEN=your-huggingface-token

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# Security (Production Only)
ALLOWED_ORIGINS=https://app.meluriai.com,https://www.meluriai.com
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS=100

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key
